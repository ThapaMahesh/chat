<% content_for :content do %>
	<div class="container" style="margin-top: 60px;">
		<h3>Active Chat List</h3>
		<div class="row">
			<ul class="list-group col-md-4">
				<% @chatData.each do |eachChat| %>
			  		<a href="conversation/<%= eachChat[:chat_user_id] %>"><li class="list-group-item"><%= eachChat[:chat_with] %></li></a>
			  	<% end %>
			</ul>
		</div>
		<div class="row">
			<form method="get" action="/message">
			    <button class="btn btn-primary" type="submit">New Chat</button>
			</form>
		</div>
	</div>
<% end %>
