<% content_for :content do %>
	<div class="container" style="margin-top: 60px;">
		<h3 class="text-center"><%= @chat_with %></h3>
		
		<div class="row">
			<div class="fade in" style="display:block;">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			      
			      <div class="modal-body">
			      	<% @all_messages.each do |eachMessage| %>
			        	<%= eachMessage[:message_date] %> <b><%= eachMessage[:message_by] %> (<%= eachMessage[:role] %>):</b><p><%= eachMessage[:message] %></p>
			        <% end %>
			      </div>
			      
			    </div><!-- /.modal-content -->
			  </div><!-- /.modal-dialog -->
			</div><!-- /.modal -->
		</div>
	</div>
<% end %>