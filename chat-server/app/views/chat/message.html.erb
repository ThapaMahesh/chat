<% content_for :content do %>
	<div class="container" style="margin-top: 60px;">
		<h3 class="text-center">New Chat</h3>
		
		<%= form_tag("/message", method: "post", class: "form-horizontal") do %>
		  <div class="form-group">
		    <label for="users" class="col-sm-2 control-label">Message To</label>
		    <div class="col-sm-5">
		      <select name="message_to" class="form-control" id="users" placeholder="Select User">
		      	<% @users.each do |eachUser| %>
		      		<option value="<%= eachUser.id %>"><%= eachUser.username %> (<%= eachUser.role == true ? "trainer" : "user" %>)</option>
		      	<% end %>
		      </select>
		    </div>
		  </div>
		  <div class="form-group">
		    <label for="message" class="col-sm-2 control-label">Message</label>
		    <div class="col-sm-5">
		    	<textarea name="message" class="form-control" id="message" placeholder="Write a message..."></textarea>
		    </div>
		  </div>
		  
		  <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
		      <button type="submit" class="btn btn-primary">Send</button>
		    </div>
		  </div>
		<% end %>
	</div>
<% end %>